{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./apps/backend/src/types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./apps/backend/src/*"],
      "~/*": ["./apps/frontend/app/*"]
    }
  },
  "include": ["apps/backend/**/*.ts"]
}
